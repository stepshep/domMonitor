<form id="email-sign-up" action="https://www.blumenthal.senate.gov/newsletter/"  method="post" name="email-signup">
<fieldset>
<legend>
<span class="instructions">
<ol>
<ol class="col two">
<input id="newsletter_firstname" aria-required="true" name="newsletter_firstname" class="cleardefault validate['required']" value="First Name" >
<input id="newsletter_lastname" aria-required="true" name="newsletter_lastname" class="cleardefault validate['required']" value="Last Name" >
<ol class="col two">
<input id="newsletter_email" aria-required="true" name="newsletter_email" class="cleardefault validate['required']" value="Email Address" >
<input id="newsletter_zipcode" aria-required="true" name="newsletter_zipcode" class="cleardefault validate['required']"  value="Zip Code" >
<button id="sign-up" name="sign-up" type="submit" title="Sign up for Email updates" class="button">
